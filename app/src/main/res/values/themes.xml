<?xml version="1.0" encoding="utf-8"?>
<!--
    File: themes.xml (Light Mode)
    Purpose: Defines the light theme for the app
    Material 3 theme configuration for light mode
-->
<resources>
    <style name="Theme.HoldOn" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.HoldOn.SplashScreen" parent="Theme.HoldOn">
        <item name="android:windowBackground">@color/primary</item>
    </style>
</resources>